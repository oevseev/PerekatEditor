<UserControl x:Class="PerekatEditor.Controls.Palette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PerekatEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="300">

    <StackPanel x:Name="ButtonPanel"
                Height="32"
                Margin="0"
                Orientation="Horizontal"
                RenderOptions.BitmapScalingMode="HighQuality"
                Loaded="ButtonPanel_Loaded">
        <ToggleButton x:Name="SelectionButton" Width="24" Height="24" Margin="4" Click="SelectionButton_Click">
            <ToggleButton.Background>
                <ImageBrush ImageSource="{StaticResource Icon_Selection}"/>
            </ToggleButton.Background>
        </ToggleButton>
        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
    </StackPanel>

</UserControl>
